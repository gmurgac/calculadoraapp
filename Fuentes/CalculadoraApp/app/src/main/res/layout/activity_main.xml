<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/paddinGeneral"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/algo"
            android:textSize="30sp"

            android:gravity="center"
            android:background="@color/colorAccent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED"
            android:textSize="@dimen/tamanioLetra"
            android:layout_marginTop="@dimen/topTxt"

            ></TextView>

        <EditText
            android:id="@+id/n1_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="@dimen/topTxt"
            android:focusable="false"
            android:hint="0"
            ></EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="numero1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:padding="@dimen/paddinGeneral"

                ></Button>
            <Button
                android:onClick="numero2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:textColor="@color/primary_light"
                android:padding="@dimen/paddinGeneral"
                ></Button>
            <Button
                android:onClick="numero3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:textColor="@color/primary_light"
                android:padding="@dimen/paddinGeneral"
                ></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="numero4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:padding="@dimen/paddinGeneral"

                ></Button>
            <Button
                android:onClick="numero5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:textColor="@color/primary_light"
                android:padding="@dimen/paddinGeneral"
                ></Button>
            <Button
                android:onClick="numero6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:textColor="@color/primary_light"
                android:padding="@dimen/paddinGeneral"
                ></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="numero7"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:padding="@dimen/paddinGeneral"

                ></Button>
            <Button
                android:onClick="numero8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:textColor="@color/primary_light"
                android:padding="@dimen/paddinGeneral"
                ></Button>
            <Button
                android:onClick="numero9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:textColor="@color/primary_light"
                android:padding="@dimen/paddinGeneral"
                ></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:onClick="sumar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:padding="@dimen/paddinGeneral"

                ></Button>
            <Button
                android:onClick="numero0"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:padding="@dimen/paddinGeneral"

                ></Button>
            <Button
                android:onClick="restar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/colorAccent"
                android:textSize="@dimen/tamanioLetra"
                android:textColor="@color/primary_light"
                android:padding="@dimen/paddinGeneral"
                ></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:padding="@dimen/paddinGeneral"
                android:onClick="multiplicar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/secondary_text"
                android:textSize="@dimen/tamanioLetra"


                ></Button>
            <Button
                android:padding="@dimen/paddinGeneral"
                android:onClick="division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/secondary_text"
                android:textSize="@dimen/tamanioLetra"
                ></Button>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:padding="@dimen/paddinGeneral"
                android:onClick="modulo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="%"
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/secondary_text"
                android:textSize="@dimen/tamanioLetra"


                ></Button>
            <Button
                android:padding="@dimen/paddinGeneral"
                android:onClick=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:layout_marginTop="@dimen/topTxt"
                android:background="@color/secondary_text"
                android:textSize="@dimen/tamanioLetra"
                ></Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/topTxt"
            >

            <TextView
                android:id="@+id/res_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamanioLetra"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                ></TextView>
            <TextView
                android:id="@+id/res_txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tamanioLetra2"
                android:text="RESULTADO"
                android:textAlignment="center"
                android:layout_weight="1"

                ></TextView>


        </LinearLayout>
    </LinearLayout>

</ScrollView>


</LinearLayout>